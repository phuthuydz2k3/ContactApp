<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactDetails">

    <LinearLayout
        android:id="@+id/exitTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:orientation="horizontal"
        android:background="#F2F1F7"
        >

        <ImageView
            android:layout_width="@dimen/design_fab_size_mini"
            android:layout_height="@dimen/design_fab_size_mini"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_chevron_left_24"
            app:tint="#03A9F4"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="25sp"
            android:gravity="left"
            android:text="Exit"
            android:textColor="#03A9F4"/>
    </LinearLayout>

    <TextView
        android:id="@+id/editTv"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:text="Edit"
        android:textColor="#03A9F4"
        android:textSize="25sp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="#F2F1F7"
        android:orientation="vertical"
        android:layout_below="@+id/exitTv">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileIv"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/baseline_person_24"
            app:civ_circle_background_color="#949597" />

        <TextView
            android:id="@+id/fNameTv"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Null"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F1F7"
        android:orientation="horizontal"
        android:layout_below="@id/view1">

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Text"
            android:background="@drawable/rounded_background"
            android:textColor="#03A9F4"
            android:textSize="12sp"
            android:layout_margin="5dp"
            style="?android:attr/borderlessButtonStyle"
            android:drawableTop="@drawable/baseline_message_24"
            android:paddingTop="5dp"
            android:drawablePadding="0dp"
            />

        <TextView
            android:id="@+id/calling"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Call"
            android:background="@drawable/rounded_background"
            android:textColor="#03A9F4"
            android:textSize="12sp"
            android:layout_margin="5dp"
            style="?android:attr/borderlessButtonStyle"
            android:drawableTop="@drawable/baseline_phone_35"
            android:paddingTop="5dp"
            android:drawablePadding="0dp"
            />

        <TextView
            android:id="@+id/video"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Video"
            android:background="@drawable/rounded_background"
            android:textColor="#03A9F4"
            android:textSize="12sp"
            android:layout_margin="5dp"
            style="?android:attr/borderlessButtonStyle"
            android:drawableTop="@drawable/baseline_videocam_24"
            android:paddingTop="5dp"
            android:drawablePadding="0dp"
            />

        <TextView
            android:id="@+id/gmail"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Email"
            android:background="@drawable/rounded_background"
            android:textColor="#03A9F4"
            android:textSize="12sp"
            android:layout_margin="5dp"
            style="?android:attr/borderlessButtonStyle"
            android:drawableTop="@drawable/baseline_email_24"
            android:paddingTop="5dp"
            android:drawablePadding="0dp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/buttons"
        android:background="#F2F1F7"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:paddingTop="5dp"
                android:drawablePadding="0dp"
                android:gravity="left"
                android:text="Phone number"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/pNumTv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textColor="#03A9F4"
                android:drawablePadding="0dp"
                android:gravity="left"
                android:text="0973851011"
                android:paddingLeft="5dp"
                android:textSize="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:paddingTop="5dp"
                android:drawablePadding="0dp"
                android:gravity="left"
                android:text="Full name"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/fullNameTv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textColor="#03A9F4"
                android:drawablePadding="0dp"
                android:gravity="left"
                android:text="0973851011"
                android:paddingLeft="5dp"
                android:textSize="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:paddingTop="5dp"
                android:drawablePadding="0dp"
                android:gravity="left"
                android:text="Email"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/emailTv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textColor="#03A9F4"
                android:drawablePadding="0dp"
                android:gravity="left"
                android:text="0973851011"
                android:paddingLeft="5dp"
                android:textSize="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:paddingTop="5dp"
                android:drawablePadding="0dp"
                android:gravity="left"
                android:text="Company name"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/cNameTv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:drawablePadding="0dp"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="0973851011"
                android:textColor="#03A9F4"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/info"
        android:background="#F2F1F9"
        >

    </LinearLayout>


</RelativeLayout>